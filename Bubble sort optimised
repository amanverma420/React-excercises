#include<stdlib.h>
#include<iostream>
#include<stdio.h>
using namespace std;
int main(){
    int arr[]={4123,35,543,325,4,52,523,5};
    int n=sizeof(arr)/sizeof(arr[0]);

    //print unsorted array 

    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }

    for(int i=0;i<n-1;i++){  //n-1 passes
        //traverse 
        bool flag=true;
        for(int j=0;j<n-1-i;j++){ 
            if(arr[j]>arr[j+1]){ //swap
                // int temp=arr[j];
                // arr[j]=arr[j+1];
                // arr[j+1]=temp;
                swap(arr[j],arr[j+1]);
                flag=false;
            }
        }
        if(flag==true) break; //swap didn't happen if it is sorted
    }
    //print sorted array 
    cout<<endl;
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
}
