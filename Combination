#include<iostream>
using namespace std;
int fact(int n){
    int fact=1;
    for(int i=n;i>0;i--){
        fact=fact*i;
    }
    return fact;
}
int combination(int n,int r){
    int x=fact(n)/(fact(r)*fact(n-r));
    return x;

}
int main()
{
    int n;
    cout<<"Enter n : ";
    cin>>n;
    int r;
    cout<<"Enter r : ";
    cin>>r;

    cout<<combination(n,r)<<" ";
}
